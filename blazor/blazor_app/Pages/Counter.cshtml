@page "/counter"

<h1>Counter</h1>

<input />

<p>Current count: @currentCount</p>

<button onclick="@IncrementCount">Click me</button>

<MyDialog Title="Hello" OnOK="@OnOk">

</MyDialog>

@functions {
  int currentCount = 0;

  void IncrementCount()
  {
    currentCount++;
  }

  void OnOk()
  {
    currentCount++;
  }

}
