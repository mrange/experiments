<Window x:Class="SimpleGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleGUI" Height="350" Width="525"
        AutomationProperties.AutomationId="SimpleGUI"
        >
    <UniformGrid AutomationProperties.AutomationId="Grid">
        <TextBlock >Label</TextBlock>
        <TextBox x:Name="Input" AutomationProperties.AutomationId="Input">Input</TextBox>
        <Button AutomationProperties.AutomationId="OK" Click="Click_Ok">Ok</Button>
        <Button AutomationProperties.AutomationId="Cancel" Click="Click_Cancel">Cancel</Button>
    </UniformGrid>
</Window>
